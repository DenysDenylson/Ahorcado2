<h1>jugar ahorcado</h1>
<form action="/validar_letra" method="post">
	<%if @palabra_secreta =~ /#{@letra}/%>
		<h1>si esta aqui la letra <%= @letra %></h1>
		<% for i in 0...@palabra_secreta.length %>
			<% if @palabra_secreta[i] == @letra%>
				<% @palabra_jugar[i] = @letra%>
			<% end%>
		<%end%>
	<%else%>
		<% @intentos +=1  %>	
	<%end%>		
	
	<h2>intentos = <%= @intentos %> </h2>
	<p>numero de caracteres de la palabra = <%= @palabra_secreta.length %></p>
	<br>
	<center><h1>
		<!-- PALABRA::: &nbsp; -->
		<%for i in 0...@palabra_jugar.length%>
			<%= @palabra_jugar[i] %>
		<%end%>
	</h1></center>
	<br>
		<input type="hidden" name="palabra" value="<%= @palabra_secreta %>" ><br>
		<input type="hidden" name="intentos" value="<%= @intentos %>" ><br>
		<input type="hidden" name="palabra_jugar" value="<%= @palabra_jugar %>" ><br>

		<label for="letra">letra</label>
		<input type="text" name="letra" id="letra" maxlength="1" autofocus="autofocus">
		<input type="submit" name="adivinar" value="adivinar"  >

</form>

<div>
	<table border="1">
		<thead>
			<tr>
				<th  colspan="2">resultados anteriores</th>
			</tr>
		</thead>
		<tbody>
			<tr>
				<td>palabra secreta</td>
				<td>palabra final</td>
			</tr>
		</tbody>
	</table>
</div>